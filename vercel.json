{
  "version": 2,
  "name": "newsbot-kr",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/simple_clean_api.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/simple_clean_api.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "backend/simple_clean_api.py": {
      "maxDuration": 30
    }
  },
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "framework": "nextjs"
}
